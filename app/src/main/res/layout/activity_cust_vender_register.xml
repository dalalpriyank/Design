<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cust_vender_register"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/red"
    android:paddingTop="30dp"
    tools:context="com.example.pagare.design.cust_vender_register">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Coldel"
        android:id="@+id/wel"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textSize="31dp"
        android:elevation="50dp"
        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
        android:layout_marginBottom="120dp"
        android:fontFamily="cursive" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer Login"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:id="@+id/btn_cust"
        android:background="#d7d4d4"
        android:textColor="#000000"
        android:layout_marginBottom="30dp"
        android:fontFamily="serif" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vendor Login"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:id="@+id/btn_vendor"
        android:background="#d7d4d4"
        android:textColor="#000000"
        android:layout_marginBottom="30dp"
        android:fontFamily="serif" />

</LinearLayout>
